@import './styleReset.styl'
@import './variables.styl'

#root
    margin-top 16px
    width: 1180px
    opacity: 0
    transition(opacity, 1s, 0s)

#root.appeared
    opacity: 1

body
    font-size: 14px
    flexCenter()

div
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center

#tabsCont
    width: 100%
    flex(column, flex-start, center)

img.logoMain
    max-width: 72px
    margin-right: 24px

#logoMain
    opacity: 0
    transition(opacity, 0.8s, 0s)

#logoMain.appeared
    opacity: 1 

.tabBody
    width: 100%
